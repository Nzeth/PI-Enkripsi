<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.enkripsi"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.enkripsi.MainActivity" />
        <activity android:name="com.example.enkripsi.SplashActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.enkripsi.MenuActivity" />
        <activity
            android:name="com.example.enkripsi.HowtoActivity"
            android:label="How To" />
        <activity
            android:name="com.example.enkripsi.AboutActivity"
            android:label="About" />
    </application>

</manifest>